/**
 * Category layered navigation
 *
 * @see Mage_Catalog_Block_Layer_View
 */
?>
<?php if($this->canShowBlock()): ?>
<section class="block block-layered-nav">
        <a href="#" id="ast-control" class="ast-small-label button"><span>Show</span> product filters</a>
        <?php echo $this->getStateHtml() ?>
        <?php if ($this->getLayer()->getState()->getFilters()): ?>
        <?php endif; ?>
        <?php if($this->canShowOptions()): ?>
        <h4 class="sidebar-subtitle"><?php echo $this->__('Filter By:') ?></h4>
                <?php $_filters = $this->getFilters() ?>
            <ul class="product-filters">
                <?php foreach ($_filters as $_filter): ?>
                <?php if($_filter->getItemsCount()): ?>
                    <li>
                    <h4 class="filter-title"><?php echo $this->__($_filter->getName()) ?><h4>
                    <?php echo $_filter->getHtml() ?><!-- ul.filter-list -->
                    </li>
                <?php endif; ?>
                <?php endforeach; ?>
            </ul>
            <script type="text/javascript">decorateDataList('narrow-by-list')</script>
        <?php endif; ?>
</section>
<?php endif; ?>





