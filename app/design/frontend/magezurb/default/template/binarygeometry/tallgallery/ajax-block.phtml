/**
 * Product media data template
 *
 * @see Mage_Catalog_Block_Product_View_Media
 */
?>

<?php
	$product = $this->getProduct(); // cache the product
	$imageId = $this->getData('imagid'); // get param value - image id
	$imageSize = $this->getData('size'); // get param value - image resize
	$imageGallery = $this->getGalleryImages(); // get all images for current product

	$newImage = $imageGallery->getItemByColumnValue('value_id', $imageId); // return correct image from param
	$imgUrl = $this->helper('catalog/image')->init($this->getProduct(), 'image', $newImage->getFile())->resize($imageSize); // return url of resized image
	$imgAlt = $this->htmlEscape($newImage->getLabel()); // return value
	$img = '<img src="'.$imgUrl.'" alt="'.$imgAlt.'"/>';
	echo $img;

